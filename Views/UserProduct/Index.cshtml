                <div class="swiper-container swp1">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide">
                            <img src="~/Content/Images/UserHomeImg/hoinghetocvietnam.png" />
                        </div>
                        <div class="swiper-slide">
                            <img src="~/Content/Images/UserHomeImg/banner4.png" />
                        </div>
