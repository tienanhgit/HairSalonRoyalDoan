    <div class="container">
        <div class="row">
            <div class="col-2 col-sm-3">
                <div class="card bg-light mb-3">
                    <div class="card-header bg-primary text-white text-uppercase"><i class="fa fa-list"></i> Loại sản phẩm</div>
                    <ul class="list-group category_block">
                        <li class="list-group-item"><a href="category.html">Chăm sóc tóc</a></li>
                        <li class="list-group-item"><a href="category.html">Chăm sóc da</a></li>
                        <li class="list-group-item"><a href="category.html">Chăm sóc cơ thể</a></li>
                        <li class="list-group-item"><a href="category.html">Chăm sóc râu</a></li>
                        <li class="list-group-item"><a href="category.html">Khác</a></li>
                    </ul>
                </div>
                <div class="card bg-light mb-3">
                    <div class="card-header bg-primary text-white text-uppercase"><i class="fa fa-list"></i> Thương Hiệu</div>
                    <ul class="list-group category_block">
                        <li class="list-group-item"><a href="category.html">Chăm sóc tóc</a></li>
                        <li class="list-group-item"><a href="category.html">Chăm sóc da</a></li>
                        <li class="list-group-item"><a href="category.html">Chăm sóc cơ thể</a></li>
                        <li class="list-group-item"><a href="category.html">Chăm sóc râu</a></li>
                        <li class="list-group-item"><a href="category.html">Khác</a></li>
                    </ul>
                </div>

            </div>
            <div class="col-9">
                <div class="row">
                    @foreach (var ItemProduct in Model)
                    {
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="card">
                                @{
                                    if (ItemProduct.HinhAnh != "")
                                    {
                                        <img src="@ItemProduct.HinhAnh" style="max-height:300px" />
                                    }
                                    else
                                    {
                            <img src="~/Content/Images/ImagesProduct/no-images.png" style="height:300px" />

                                    }
                                }

                                <div class="card-body">
                                    <h4 class="card-title"><a href="ProductDetail?id=@ItemProduct.MaSanPham" title="View Product">@ItemProduct.TenSanPham</a></h4>
                                    <p class="card-text">@ItemProduct.MoTa</p>
                                    <div class="row">
                                        <div class="col">
                                            <p class="btn btn-danger btn-block">@ItemProduct.Gia</p>
                                        </div>
                                        <div class="col">
                                            <a href="#" class="btn btn-success btn-block">Add to cart</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                <div class="col-12" style="margin-top:12px; font-size:40px">
                    <div class="text-right" style="font-size:30px !important">
                        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                    </div>
                    </div>
                </div>
            </div>

        </div>
    </div>


